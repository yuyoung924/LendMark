<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lendmark.ui.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_findAccount"
            app:destination="@id/findAccountFragment" />

        <action
            android:id="@+id/action_login_to_changePassword"
            app:destination="@id/changePasswordFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.lendmark.ui.auth.signup.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.lendmark.ui.auth.findaccount.ChangePasswordFragment"
        android:label="Change Password">
        <action
        android:id="@+id/action_login_to_changePassword"
        app:destination="@id/changePasswordFragment" />
    </fragment>



    <fragment
        android:id="@+id/findAccountFragment"
        android:name="com.example.lendmark.ui.auth.findaccount.FindAccountFragment"
        android:label="FindAccountFragment"
        tools:layout="@layout/fragment_find_account" />

    <fragment
        android:id="@+id/buildingListFragment"
        android:name="com.example.lendmark.ui.building.BuildingListFragment"
        android:label="건물 선택"
        tools:layout="@layout/fragment_building_list">
        <action
            android:id="@+id/action_buildingList_to_roomList"
            app:destination="@id/roomListFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomListFragment"
        android:name="com.example.lendmark.ui.room.RoomListFragment"
        android:label="강의실 목록"
        tools:layout="@layout/fragment_room_list" />



</navigation>
