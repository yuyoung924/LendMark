<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatbotToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_close" />

    <!-- =======================
         Chat 영역 (Selector + ChatMessages)
         ======================= -->
    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 선택 영역 -->
        <LinearLayout
            android:id="@+id/selectorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 날짜 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="날짜"
                android:textColor="#444"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDateSelector"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner2"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="날짜 선택"
                android:textColor="#000000"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- 시간 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="시간"
                android:textColor="#444"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- 건물 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="건물"
                android:textColor="#444"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerBuilding"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner2" />

            <Button
                android:id="@+id/btnAskAI"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_primary_button"
                android:text="빠른 강의실 찾기"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 채팅 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="12dp" />
    </LinearLayout>

    <!-- =======================
         Fragment Fullscreen Container
         ======================= -->
    <FrameLayout
        android:id="@+id/chatbotFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FFFFFF" />


    <!-- 로딩 표시 -->
    <ProgressBar
        android:id="@+id/progressBarAI"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge" />

</LinearLayout>
