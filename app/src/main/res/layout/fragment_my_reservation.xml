<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp"
    android:paddingBottom="72dp" 
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Status Filter -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/filterAll"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/filterPending"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterApproved"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterFinished"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Card 1: Approved (Upcoming) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frontier Hall 107"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/tvStatusApproved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:background="@drawable/bg_status_green"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-15 • 13:00 - 15:00"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendees: 5"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purpose: Team project"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelApproved"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cancel Reservation"
                    android:textColor="#E53935"
                    app:strokeColor="#E53935"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Pending -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eoui Hall 201"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/tvStatusPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:background="@drawable/bg_status_yellow"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-20 • 16:00 - 18:00"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendees: 8"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purpose: Club meeting"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelPending"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cancel Reservation"
                    android:textColor="#E53935"
                    app:strokeColor="#E53935"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3: Finished -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFinished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dasan Hall 301"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/tvStatusFinished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finished"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp"
                        android:background="@drawable/bg_status_gray"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-10 • 10:00 - 12:00"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendees: 3"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purpose: Study"
                        android:textColor="@color/gray_dark"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnRegisterInfo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Register Classroom Info"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#190848"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
