<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.auth.findaccount.FindAccountFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Account"
        android:textColor="#190848"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Top Tabs (Find ID / Find Password) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/tabToggleGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:backgroundTint="#F5F6F8"
        android:clipToOutline="true"
        android:padding="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFindIdTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Find ID"
            android:textSize="14sp"
            android:textColor="@color/tab_text_color"
            android:backgroundTint="@color/tab_background_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            app:checkedIcon="@null"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFindPwTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Find Password"
            android:textSize="14sp"
            android:textColor="@color/tab_text_color"
            android:backgroundTint="@color/tab_background_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            app:checkedIcon="@null"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:iconGravity="textStart" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- ðŸ“± Find ID Section -->
    <LinearLayout
        android:id="@+id/layoutFindId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tabToggleGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can find your ID with the phone number you registered with."
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F9FAFB"
            android:hint="Phone Number (010-0000-0000)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFindId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Find ID"
            android:textColor="@color/white"
            android:backgroundTint="#190848" />
    </LinearLayout>

    <!-- ðŸ” Find Password Section -->
    <LinearLayout
        android:id="@+id/layoutFindPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tabToggleGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will send a password reset link to your registered email address."
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F9FAFB"
            android:hint="School Email (example@seoultech.ac.kr)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmailForPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSendResetLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Send Reset Link"
            android:textColor="@color/white"
            android:backgroundTint="#190848" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
