<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.room.RoomScheduleFragment">

    <!-- 상단: 강의실 이름 -->
    <TextView
        android:id="@+id/tvRoomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다산관 301호"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#190848"
        android:layout_marginBottom="12dp" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약하실 시간을 선택해주세요. 연속된 시간만 선택 가능합니다."
        android:textSize="13sp"
        android:textColor="#4B5563"
        android:layout_marginBottom="8dp" />

    <!-- legend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">

        <!-- 선택 가능 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/bg_cell_empty"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택 가능"
                android:textSize="11sp"
                android:textColor="#6B7280" />
        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- 선택됨 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/bg_cell_selected"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택됨"
                android:textSize="11sp"
                android:textColor="#6B7280" />
        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- 수업 중 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/bg_cell_class"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수업 중"
                android:textSize="11sp"
                android:textColor="#6B7280" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weekSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/btnPrevWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀ 이전주"
            android:textColor="#333333"
            android:textSize="14sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvWeekRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.11.24 - 11.30"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/btnNextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음주 ▶"
            android:textColor="#333333"
            android:textSize="14sp"
            android:padding="8dp" />

    </LinearLayout>


    <!-- 시간표 스크롤 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="90dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 우리가 코드에서 채우는 TableLayout -->
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3,4,5"
                android:layout_marginTop="12dp"
                android:background="@android:color/white" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="6"/>

        </LinearLayout>
    </ScrollView>

    <!-- 선택 정보 + 예약 버튼 영역 -->
    <LinearLayout
        android:id="@+id/selectionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_gray"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvSelectedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택된 시간이 없습니다."
            android:textColor="#111827"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSelectedDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#6B7280"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnReserve"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="95dp"
        android:text="예약하기"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#190848"
        android:enabled="false" />

</LinearLayout>
